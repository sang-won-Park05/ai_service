#############################
# 🔐 OpenAI / GPT API
#############################
OPENAI_API_KEY=your-openai-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_MODEL=gpt-4o-mini   # 또는 gpt-4.1, gpt-4o, 원하는 모델명

# Whisper 음성 모델(GPT API로 STT 할 경우)
OPENAI_STT_MODEL=gpt-4o-mini-tts
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_ASR_MODEL=whisper-1     # whisper_small 로컬 사용 시 이 값은 필요 없음


#############################
# 🔎 OpenSearch
#############################
OPENSEARCH_HOST=https://xxx.ap-northeast-2.aoss.amazonaws.com   # Serverless Endpoint URL
OPENSEARCH_REGION=ap-northeast-2
OPENSEARCH_USERNAME=            # Serverless면 대부분 비움
OPENSEARCH_PASSWORD=            # Serverless면 대부분 비움
OPENSEARCH_INDEX=medinote_all  # 너가 사용할 통합 인덱스 이름
OPENSEARCH_EMBEDDING_DIM=3072  # text-embedding-3-large 기준


#############################
# 🎧 STT (Whisper local 사용 시)
#############################
WHISPER_MODEL_PATH=./models/whisper-small   # 로컬 모델 경로
USE_LOCAL_WHISPER=false                     # true면 로컬 Whisper 사용

#############################
# 🖼  OCR (이미지 → 텍스트)
#############################
OCR_PROVIDER=gpt-vision       # 또는 paddle
OCR_PADDLE_LANG=ko

#############################
# 🧠 LangSmith (옵션)
#############################
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=medinote-rag
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com


#############################
# 🔒 가드레일 관련 설정
#############################
MEDINOTE_EMERGENCY_ENABLED=true
MEDINOTE_SAFE_MODE=true
